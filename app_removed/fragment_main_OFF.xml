<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainFragment"
>


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/ping_enabled_ho01"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toTopOf="@id/ping_state_ho01"
        app:layout_constraintBottom_toBottomOf="@id/ping_state_ho01"
        app:layout_constraintEnd_toStartOf="@+id/ping_state_ho01"
        android:text="Fake"
    />
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.AppTheme.Button.IconButton"
        android:id="@+id/ping_state_ho01"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/wake_ho01"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="16dp"
        android:text=""
        app:icon="@drawable/ic_baseline_device_unknown_24"
    />
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.AppTheme.Button.IconButton"
        android:id="@+id/wake_ho01"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toTopOf="@+id/ping_enabled_ho01"
        app:layout_constraintEnd_toEndOf="parent"
        android:text=""
        app:icon="@drawable/ic_baseline_electrical_services_24"
        android:backgroundTint="?attr/colorPrimaryVariant"
    />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/ping_enabled_ho02"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toTopOf="@id/ping_state_ho02"
        app:layout_constraintBottom_toBottomOf="@id/ping_state_ho02"
        app:layout_constraintEnd_toStartOf="@+id/ping_state_ho02"
        app:layout_constraintHorizontal_bias="0.5"
        android:text="Synology Nasa "
    />
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.AppTheme.Button.IconButton"
        android:id="@+id/ping_state_ho02"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@+id/ping_enabled_ho01"
        app:layout_constraintEnd_toStartOf="@+id/wake_ho02"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="32dp"
        android:text=""
        app:icon="@drawable/ic_baseline_device_unknown_24"
    />
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.AppTheme.Button.IconButton"
        android:id="@+id/wake_ho02"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toTopOf="@+id/ping_enabled_ho02"
        app:layout_constraintEnd_toEndOf="parent"
        android:text=""
        app:icon="@drawable/ic_baseline_electrical_services_24"
        android:backgroundTint="?attr/colorPrimaryVariant"
    />
</androidx.constraintlayout.widget.ConstraintLayout>