                android:id="@+id/host_ho01"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                >
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/ping_enabled_ho01"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="0.75"
                    android:textAlignment="textEnd"
                    tools:text="Fake"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ping_counts_ho01"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:textAlignment="center"
                    tools:text="999/888"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ping_state_ho01"
                    style="@style/Widget.AppTheme.Button.IconButton"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text=""
                    app:icon="@drawable/ic_baseline_device_unknown_24"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/wake_ho01"
                    style="@style/Widget.AppTheme.Button.IconButton"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=""
                    app:icon="@drawable/ic_wakeup_wol_animate"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

