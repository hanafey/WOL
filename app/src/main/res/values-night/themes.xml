<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="BaseThemeApp">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_night</item>
        <item name="colorPrimaryVariant">@color/primaryVariant_night</item>
        <item name="colorOnPrimary">@color/onPrimary_night</item>

        <item name="colorSurface">@color/surface_night</item>
        <item name="colorOnSurface">@color/onSurface_night</item>

        <item name="android:colorBackground">@color/background_night</item>
        <item name="colorOnBackground">@color/onBackground_night</item>

        <item name="colorBackgroundFloating">@color/background_floating_night</item>
        <item name="android:colorBackgroundFloating">@color/background_floating_night</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_night</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant_night</item>
        <item name="colorOnSecondary">@color/onSecondary_night</item>

        <!-- Error brand color. -->
        <item name="colorError">@color/error_night</item>
        <item name="colorOnError">@color/onError_night</item>

        <!-- Toolbar -->
        <item name="colorSurfaceToolbarSpecial">@color/purple_500</item>
        <item name="colorOnSurfaceToolbarSpecial">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primaryStatus_night</item>
    </style>

    <style name="Theme.BP.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Dark" />
</resources>